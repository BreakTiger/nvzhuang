.order-goods-container {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  /* padding: 10rpx 30rpx 15rpx 30rpx; */
  margin: 10rpx 30rpx 0rpx 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #f5f5f5;
}

/*商品图图片*/

.order-goods-image {
  width: 180rpx;
  height: 196rpx;
  border-radius: 10rpx;
  margin-right: 20rpx
}

/*购买信息*/

.order-goods-buy-container {
  display: flex;
  text-align: right;
  flex-direction: row;
}

/*价格*/

.order-goods-price {
  color: #f2afb9;
  font-size: 28rpx;
  margin-right: 320rpx;
}

/*标题*/

.order-goods-title-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  width: 480rpx;
  
}

/*商品价格*/

.order-goods-title {
  color: #262626;
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom: 15rpx;
}

/*商品原价*/

.order-goods-orgin-price {
  color: #a3a3a3;
  font-size: 28rpx;
  text-decoration: line-through;
}

/*商品数量*/

.order-goods-count {
  color: #f2afb9;
  font-size: 28rpx;
}

/*规格信息*/

/* 文字设置 */

.color-sku {
  margin-bottom: 15rpx;
}

.color-text {
  color: #a3a3a3;
  font-size: 28rpx;
  margin-right: 140rpx;
}

.sku-text {
  color: #a3a3a3;
  font-size: 28rpx;
}
