@import "/templates/order/goods/order-goods-template.wxss";

.order-item-container {
  border-top: 1px solid #f2f2f2;
  border-bottom: 1px solid #ededed;
  display: flex;
  flex-direction: column;
  background-color: #fff;
  margin-bottom: 21rpx;
}

.order-status-complete {
  font-size: 26rpx;
  color: #666666;
}

.order-status-cancel {
  font-size: 26rpx;
  color: #a3a3a3;
}

/*顶栏*/

.order-header-container {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 30rpx;
  margin-right: 30rpx;
  justify-content: space-between;
  border-bottom: 1px solid #f5f5f5;
  margin-bottom: 20rpx;
  height: 85rpx;
}

/*底栏*/

.order-footer-container {
  padding-left: 25rpx;
  padding-right: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  height: 70rpx;
}

/*底栏文字*/

.order-footer-container text {
  color: #262626;
  font-size: 28rpx;
}

/*顶栏图片*/

.shop-info-icon {
  height: 40rpx;
  width: 40rpx;
  vertical-align: middle;
}

/*顶栏店铺名称*/

.shop-info-name {
  margin-left: 10rpx;
  margin-right: 442rpx;
  font-size: 28rpx;
  color: #262626;
}


/*价格*/

.order-footer-container .footer-price {
  font-size: 32rpx;
  color: #666666;
  margin-right: 20rpx;
}

/* 数量 */

.footer-count {
  margin-right: 20rpx;
}

/*间隔*/

.order-goods-hr {
  width: 100%;
  height: 6rpx;
}

/* 操作栏 */

.order-action-bar {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  border-top: 1px solid #f5f5f5;
  height: 90rpx;
  padding-right: 30rpx;
}
