/* 盒子 */

.goods-info-conatiner {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f3f3f2;
}

/* 轮播图 */

.goods-swiper {
  height: 750rpx;
  width: 750rpx;
}

.goods-swiper image {
  width: 100%;
  height: 750rpx;
}

/* 指示点 */

.dots {
  display: flex;
  flex-direction: row;
  position: absolute;
  top: 585rpx;
  width: 200rpx;
  height: 50rpx;
  left: 540rpx;
}

.dots .dot {
  width: 20rpx;
  height: 20rpx;
  background-color: #333;
  margin-left: 12rpx;
  border-radius: 20rpx;
  /* transform: all 0.6; */
  opacity: 0.44;
}

/* 调用的css效果 */

.dots .actives {
  background-color: #333;
  opacity: 1;
}

