/* 整体盒子 */

.info-box {
  width: 702rpx;
  height: 225rpx;
  border-radius: 10rpx;
  background-color: #fff;
  box-shadow: 0rpx 3rpx 7rpx 0rpx rgba(6, 0, 1, 0.15);
  display: flex;
  flex-direction: column;
  align-items: center;
  position: absolute;
  top: 630rpx;
  margin-bottom: 33rpx;
}

/* 小盒子 */

.number-cust {
  display: flex;
  flex-direction: row;
}

