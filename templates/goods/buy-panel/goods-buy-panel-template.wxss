/*购买面板*/

.goods-buy-panel-container {
  position: fixed;
  background: #fff;
  bottom: 113px;
  width: 699rpx;
  z-index: 1000;
  transform: translateY(150%);
  transition: all 0.4s ease;
  height: 689rpx;
  border-radius: 10rpx;
  margin-left: 26rpx;
}

.goods-buy-panel-show {
  transform: translateY(0);
}

/*遮罩层*/

.goods-buy-panel-cover {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  background-color: black;
  -webkit-filter: opacity(0.6);
  z-index: 100;
}

/*信息面板*/

.buy-panel-info-container {
  margin-left: 30rpx;
  display: flex;
  flex-direction: row;
}

/*面板图片*/

.buy-panel-icon {
  position: relative;
  top: -70rpx;
  height: 216rpx;
  width: 180rpx;
  border-radius: 6px;
  border: 1px solid #e2e2e2;
  background-color: #ffffff;
}

/*信息-价格/标题面板*/

.buy-panel-title-price {
  display: flex;
  flex: 1;
  flex-direction: column;
  padding-left: 30rpx;
  padding-top: 28rpx;
}

/*商品标题*/

.buy-panel-title {
  font-size: 30rpx;
  text-overflow: ellipsis;
  word-break: keep-all; /* 不换行 */
  white-space: nowrap; /* 不换行 */
  overflow: hidden; /* 内容超出宽度时隐藏超出部分的内容 */
  color: #1f1f1f;
  width: 120rpx;
}

/*关闭图标*/

.buy-panel-close-container {
  padding-top: 28rpx;
  width: 100rpx;
  text-align: center;
}

.buy-panel-close-icon {
  height: 31rpx;
  width: 32rpx;
}

/**
* 商品价格
*/

.buy-panel-price {
  margin-top: 10rpx;
  font-size: 36rpx;
  color: #ef9ba8;
}

/*SKU展示区域*/

.buy-panel-sku-container {
  display: flex;
  flex-direction: column;
  position: absolute;
  top: 172rpx;
  left: 30rpx;
}

/*SKU列表*/

.buy-panel-sku-list {
  padding-top: 15rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.buy-panel-sku-list view {
  margin-bottom: 15rpx;
}

/*SKU标题容器*/

.buy-panel-sku-title {
}

/*SKU标题文字*/

.buy-panel-sku-title-text {
  font-size: 30rpx;
  color: #1f1f1f;
}

/*购买数量*/

.buy-panel-num-container {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  position: absolute;
  bottom: 150rpx;
  left: 30rpx;
}

/*购买数量/剩余 容器*/

.buy-panel-num-title {
  display: flex;
  height: 82rpx;
  justify-content: flex-start;
  flex-direction: column;
}

/*购买数量文字*/

.buy-panel-num-text {
  font-size: 30rpx;
  color: #1f1f1f;
}

/*剩余数量文字*/

.buy-panel-stock-text {
  margin-top: 10rpx;
}

/*购买栏底部*/

.buy-panel-next {
  width: 260rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 10rpx;
  background-color: #ef9ba8;
  position: absolute;
  bottom: 35rpx;
  left: 222rpx;
}

.buy-panel-next text {
  font-size: 36rpx;
  color: #fff;
}

/*购买栏为空*/

.buy-panel-empty {
  background-color: #b0b0b0;
}
