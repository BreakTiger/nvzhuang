@import "/templates/address/mgr/address-item-template.wxss";
page{
    height: 100%;
    background-color: #f2f2f2;
}

/* 整体容器 */
.container{
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 颜色框 */
.BKC{
  width: 750rpx;
  height: 80rpx;
  background-color: #f5cf72;
  border-radius: 0rpx 0rpx 20rpx 20rpx;
}




.address-list-container{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: -78rpx;
}


/*底栏*/
.address-action-bar{
    position: fixed;
    bottom: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    height: 100rpx;
}
.address-action-bar text{
    font-size: 32rpx;
    color: #FFF;
}
.address-action-bar image{
    height: 40rpx;
    width: 40rpx;
    margin-right: 10rpx;
}

.address-wechart{
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40%;
    background-color: #09BB07;
}

.address-add{
    width: 500rpx;
    height: 60rpx;
    background-color: #f5cb64;
    border-radius: 20rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    
}


/*占位*/
.order-empty-tips{
    margin-top: 300rpx;
    height: 300rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}
.order-empty-tips image{
    width:100rpx;
    height: 100rpx;
}
.order-empty-tips text{
    color: #656565;
    font-size: 40rpx;
    margin-left: 30rpx;
}