/*占位*/

.order-empty-tips {
  position: fixed;
  top: 300rpx;
  width: 100%;
  height: 300rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.order-empty-tips image {
  width: 100rpx;
  height: 100rpx;
}

.order-empty-tips text {
  color: #656565;
  font-size: 40rpx;
  margin-left: 30rpx;
}
