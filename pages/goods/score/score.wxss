page{
    height: 100%;
    background-color: #F5F5F5;
}

.score-item-box{
    margin-top: 10rpx;
    background-color: white;
    display: flex;
    flex-direction: column;
}

.socre-header{
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 20rpx 30rpx;
    border-top: 1px solid #EDEDED;
    border-bottom: 1px solid #EDEDED;
}

.socre-header .title{
    font-size: 28rpx;
    margin-left: 30rpx;
}
.score-note{
    border-bottom:  1px solid #EDEDED;
}

.goods-img{
    height: 60rpx;
    width: 60rpx;
    vertical-align: middle;
}

.star-box image{
    height: 50rpx;
    width: 50rpx;
    vertical-align: middle;
    margin-left: 30rpx;
}

textarea{
    padding: 10rpx;
    width: 90%;
    min-height: 80px;
    margin-left: auto;
    margin-right: auto;
    font-family: MicroSoft Yahei;
    font-size: 30rpx;
    color: #666;
}

/******确认按钮********/
.refund-action-bar{
    position: fixed;
    bottom: 0;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100rpx;
}

.refund-action-primary{
    background-color: #1296db;
}
.refund-action{
    background-color: #FFF;
    border-top: 1px solid #e5e5e5;
}
.refund-action-primary text{
    font-size: 32rpx;
    color: #FFF;
}

.refund-action text{
    font-size: 32rpx;
    color: #333;
}

.refund-action, .refund-action-primary{
    width: 50%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
}