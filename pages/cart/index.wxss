  background-color: #f5f5f5;
  overflow-x: hidden;
}

.container {
  padding-bottom: 120rpx;
  width: 750rpx;
  overflow-x: hidden;
}

/*占位*/

.cart-empty-tips {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 300rpx;
  
}

/* 图片 */
.emptyimg {
  width: 193rpx;
  height: 181rpx;
  margin-bottom: 175rpx;
}

.emptyimg image {
  width: 100%;
  height: 100%;
}

/* 提示信息 */

.hint {
  width: 306rpx;
  height: 238rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  
}

