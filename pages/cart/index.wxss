/* 颜色背景框 */

.BCV {
  width: 750rpx;
  height: 80rpx;
  background-color: #f5cf72;
  border-radius: 0rpx 0rpx 20rpx 20rpx;
}

/* 购物车内容 */

.item-list-container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

/*
* 底部购买栏样式
*/

.cart-bar-container {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  position: fixed;
  bottom: 0;
  height: 100rpx;
  width: 100%;
  background: #fefefe;
  border-top: 1px solid #dcdcdc;
  border-bottom: 1px solid #eee;
  z-index: 100;
}

/*选择框容器*/

.cart-check-all-container {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 40rpx;
  margin-right: 125rpx;
}

/*购买框容器*/

.bar-buy-container {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  height: 60rpx;
  width: 175rpx;
  border-radius: 10rpx;
  background-color: #f5cb64;
  color: #fff;
  margin-left: 54rpx;
  margin-right: 45rpx;
}

/*购买按钮*/

.bar-buy-container text {
  color: #fff;
}

.bar-buy-container .text-btn {
  font-size: 30rpx;
}

bar-buy-container .text-small {
  font-size: 30rpx;
}

/*汇总信息*/

.cart-check-info-container {
  display: flex;
  flex: 1;
  flex-direction: column;
  justify-content: center;
}

/*汇总信息文字*/

.cart-check-price-container text {
  font-size: 28rpx;
  color: #333;
}

.cart-check-price-container .goods-price {
  color: #ef9ba8;
}

.cart-check-tips-text {
  font-size: 28rpx;
  color: #666;
}

/*没有购买物品的情况*/

.bar-buy-empty {
  background-color: #b0b0b0;
}

/*顶栏*/

.cart-header-container {
  padding-right: 25rpx;
  padding-left: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 85rpx;
  background-color: #fbfbfb;
  margin-top: 20rpx;
}

.cart-shop-info-container {
  display: flex;
  flex-direction: row;
  align-items: center;
}

/*顶栏图片*/

.shop-info-icon {
  height: 40rpx;
  width: 40rpx;
  vertical-align: middle;
}

/*顶栏店铺名称*/

.shop-info-name {
  margin-left: 10rpx;
  margin-right: 20rpx;
  font-size: 28rpx;
  color: #262626;
}

/*批量编辑*/

.cart-batch-edit {
  font-size: 28rpx;
  color: #a3a3a3;
}

/*批量编辑栏样式*/

.cart-batch-btn-container {
  padding-right: 10rpx;
}


.choice-text{
  margin-left: 25rpx;
}