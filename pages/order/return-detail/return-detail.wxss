/* 整体页面 */

page {
  background-color: #f7f6f2;
}

/* 整体容器 */

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 颜色框 */

.BKC {
  width: 750rpx;
  height: 100rpx;
  background-color: #f5cf72;
  border-radius: 0rpx 0rpx 20rpx 20rpx;
}

/* 列表容器· */

.list-container {
  width: 750rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: -90rpx;
}


/* 内容盒子 */

.item-box {
  width: 702rpx;
  background-color: #fff;
  border-radius: 20rpx;
  margin-bottom: 22rpx;

}

/* 头部信息栏 */

.header-info {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
  padding-bottom: 20rpx;
}

/* 图标 */

.header-icon {
  width: 27rpx;
  height: 27rpx;
  margin-right: 20rpx;
}

/* 店名 */

.shop_name {
  font-size: 28rpx;
  color: #666;
  margin-right: 360rpx;
}

/* 处理状态 */

.order-type {
  font-size: 28rpx;
  color: #f2b2bb;
}

/* 商品信息盒子 */

.info-box {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 0rpx 20rpx 20rpx 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
  padding-bottom: 20rpx;
}

/* 商品图片 */

.info-img {
  width: 181rpx;
  height: 197rpx;
  margin-right: 32rpx;
}

.name-sku-price {
  display: flex;
  flex-direction: column;
  width: 440rpx;
}

/* 商品名字 */

.productname {
  font-size: 24rpx;
  color: #666;
}

/* 规格 */

.sku-color {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 25rpx;
  margin-top: 35rpx;
}

.color-box {
  margin-right: 210rpx;
  font-size: 24rpx;
  color: #666;
}

.sku-box {
  font-size: 24rpx;
  color: #666;
}

.price {
  font-size: 24rpx;
  color: #666;
  margin-right: 330rpx;
}

.number {
  font-size: 24rpx;
  color: #f2b2bb;
}

.gather{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
  margin-right: 20rpx;
}

.gather text{
  font-size: 24rpx;
  color: #666;
}

.count{
  margin-right: 100rpx;
  margin-left: 310rpx;
}

.nomore{
  margin-top: 150px;
  line-height: 40px;
  font-size: 28rpx;
}
