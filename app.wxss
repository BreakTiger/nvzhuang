  padding: 10rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  background-color: #fff;
}

.btn-box .btn {
  margin-left: 10rpx;
}

.btn {
  border: #e6e6e6 solid 1px;
  border-radius: 5px;
  font-size: 24rpx;
  padding: 15rpx 20rpx;
  height: auto;
}

.btn.btn-primary {
