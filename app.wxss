  background: #fff;
}

/*有赞-面板*/

.zan-panel {
  width: 702rpx;
  height: 365rpx;
  border-radius: 20rpx;
  background-color: #fff;
  border-top: 1rpx solid #e5e5e5;
  border-bottom: 1rpx solid #e5e5e5;
  overflow: hidden;
}

.zan-panel-title {
  font-size: 14px;
  line-height: 1;
  color: #999;
  padding: 20px 15px 0 15px;
}

.zan-panel--without-margin-top {
  margin-top: 0;
}

/*有赞-列表*/

.zan-cell {
  position: relative;
  display: flex;
  align-items: center;
  line-height: 1.4;
  font-size: 14px;
  padding-bottom: 30rpx;
  padding-top: 25rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
}

.zan-cell::after {
  position: absolute;
  left: 15px;
  right: 0;
  bottom: 0;
  border-top: 1rpx solid #e5e5e5;
  background: #e5e5e5;
  content: ' ';
}

.zan-cell__bd, .zan-cell__bd text {
  flex: 1;
  font-size: 30rpx;
  color: #303030;
}

.zan-cell__ft {
  position: relative;
  text-align: right;
  color: #303030;
  font-size: 30rpx;
}

.zan-cell__flex {
  display: flex;
  align-items: center;
  font-family: MicroSoft Yahei;
}

.zan-cell--last-child::after, .zan-cell:last-child::after {
  display: none;
}

/* .zan-cell--access .zan-cell__ft {
  padding-right: 13px;
} */

.zan-cell--access .zan-cell__ft::after {
  position: absolute;
  top: 50%;
  right: 2px;
  content: " ";
  display: inline-block;
  height: 6px;
  width: 6px;
  border-width: 2px 2px 0 0;
  border-color: #c8c8c8;
  border-style: solid;
  transform: translateY(-50%) matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
}

.zan-cell--switch {
  padding-top: 6px;
  padding-bottom: 6px;
}

/*有赞-表单*/

.zan-form {
  background-color: #fff;
  border-top: 1rpx solid #e5e5e5;
  border-bottom: 1rpx solid #e5e5e5;
}

.zan-form__item {
