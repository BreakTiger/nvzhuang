/*有赞-数量选择器*/

.zan-quantity {
  color: #666;
}

.zan-quantity view {
  display: inline-block;
  line-height: 20px;
  padding: 4px 0;
  text-align: center;
  min-width: 30px;
  box-sizing: border-box;
